<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
android:orientation="vertical"
        android:background="#CE6D6D"
>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:id="@+id/login"
              android:text="Login"
              android:layout_marginTop="20dp"
              android:layout_marginStart="160dp"
              android:textColor="#221502"
              android:textStyle="bold"
              android:textFontWeight="250"
              android:textSize="40dp"

   />
<androidx.cardview.widget.CardView android:layout_width="250dp"
                                   android:layout_height="200dp"
android:layout_marginStart="80dp"
android:layout_marginTop="50dp"
app:cardCornerRadius="10dp"
app:cardBackgroundColor="#A84257">


   <LinearLayout android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:layout_marginTop="30dp"
                  android:layout_marginStart="10dp"
    android:orientation="vertical">


        <EditText
                android:hint="username"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/editTextUserName"
        />

        <EditText android:hint="password"
                  android:layout_marginTop="15dp"
                  android:gravity="center_horizontal"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/editTextPassword"

        />

    </LinearLayout>
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="100dp"
                                       android:layout_height="50dp"
                                       android:layout_marginStart="150dp"
                                       android:layout_marginTop="60dp"
                                       app:cardCornerRadius="10dp"
                                       app:cardBackgroundColor="#A84257">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:text="Login"
            android:layout_marginTop="1dp"
            android:layout_marginStart="5dp"

            android:textColor="#090808"
            android:background="#A84257"



    />
    </androidx.cardview.widget.CardView>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/googleButton"
            android:text="Login with google"

            android:textColor="#090808"
            android:background="#A84257"
            android:layout_marginStart="130dp"
            android:layout_marginTop="50dp"

    />

</LinearLayout>