<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#CE6D6D"
>
    <LinearLayout android:layout_width="350dp"
                  android:layout_height="70dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginBottom="50dp"
    android:orientation="horizontal">
        <androidx.cardview.widget.CardView android:layout_width="250dp"
                                           android:layout_height="50dp"
                                           app:cardCornerRadius="10dp"
                                           android:layout_marginBottom="200dp"
        >
        <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="Search or type web address"

                android:layout_centerHorizontal="true"
                android:id="@+id/editTextSearch"
                android:textAlignment="center"
                android:layout_gravity="center"/>


        </androidx.cardview.widget.CardView>

        <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Search"
                android:background="#A84257"
                android:layout_marginStart="16dp"

        />
    </LinearLayout>

   <LinearLayout
           android:layout_width="400dp"
           android:layout_height="100dp"
           android:orientation="horizontal"

           android:layout_marginStart="10dp"
           android:layout_marginBottom="320dp"
   >

         <ImageButton
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/camera"
                 android:layout_marginTop="0.50dp"
                 android:layout_marginStart="50dp"
                 android:id="@+id/imageButtonCamera"

         />
         <androidx.cardview.widget.CardView
                 android:layout_width="100dp"

                 android:layout_height="100dp"
                 app:cardCornerRadius="50dp"
                 android:layout_marginStart="60dp"
                 android:id="@+id/cardViewCircle"

         >
             <ImageView android:layout_width="100dp"
                        android:layout_height="100dp"
             android:id="@+id/imageViewCircle"/>

         </androidx.cardview.widget.CardView>
   </LinearLayout>
    <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
    android:layout_marginTop="-200dp"
    android:orientation="horizontal"
    android:layout_marginStart="20dp">


            <androidx.cardview.widget.CardView android:layout_width="250dp"
                                               android:layout_height="50dp"
                                               app:cardCornerRadius="10dp"
                                               android:layout_marginBottom="100dp"
            >
                <EditText
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editPhoneNumber"
                        android:hint="phonenumber"
                        android:layout_marginStart="15dp"
                />

            </androidx.cardview.widget.CardView>
        <ImageButton android:layout_width="50dp"
                   android:layout_height="50dp"
        android:src="@drawable/phone"
        android:layout_marginStart="30dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButtonPhone"/>
    </LinearLayout>


</LinearLayout>
